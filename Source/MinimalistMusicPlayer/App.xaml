<Application x:Class="MinimalistMusicPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow/MainWindow.xaml"
			 Exit="Application_Exit">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Resources/Colors.xaml" />
				<ResourceDictionary Source="Resources/Slider.xaml" />
				<ResourceDictionary Source="Resources/Scrollbar.xaml" />
				<ResourceDictionary Source="Resources/AlphaButton.xaml" />
				<ResourceDictionary Source="Resources/AlphaButtonToggle.xaml" />
				<ResourceDictionary Source="Resources/BackgroundButton.xaml" />
				<ResourceDictionary Source="Resources/BackgroundButton2.xaml" />
				<ResourceDictionary Source="Resources/BackgroundButtonToggle.xaml" />
				<ResourceDictionary Source="Resources/PlaylistItem.xaml" />
				<ResourceDictionary Source="Resources/TextBox.xaml" />
				<ResourceDictionary Source="Resources/ToolTip.xaml" />
				<ResourceDictionary Source="Resources/Vectors.xaml" />
			</ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>