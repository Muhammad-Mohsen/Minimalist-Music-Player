<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- BRUSHES -->
	<SolidColorBrush x:Key="PrimaryBrush">#FFF</SolidColorBrush> <!-- light: #FFF - dark: #2E2E2E -->
    <SolidColorBrush x:Key="BorderBrush">#555</SolidColorBrush> <!-- light: #555 - dark:  -->
    <SolidColorBrush x:Key="AccentBrush">#0078D7</SolidColorBrush> <!-- accents: blue: #007ACC - orange: #D64D1A - red: FireBrick -->

    <SolidColorBrush x:Key="PrimaryTextBrush">#2E2E2E</SolidColorBrush> <!-- light: #2E2E2E - dark: #FFF -->
    <SolidColorBrush x:Key="SecondaryTextBrush">#555</SolidColorBrush> <!-- light: #555 - dark: #AAA -->

    <SolidColorBrush x:Key="PrimaryHoverBrush">#E0E0E0</SolidColorBrush> <!-- light: #E0E0E0 - dark: #555 -->
    
    <!-- COLORS -->
	<Color x:Key="PrimaryColor">#FFF</Color> <!-- light: #FFF - dark: ##2E2E2E -->
    <Color x:Key="AccentColor">#0078D7</Color> <!-- light: #0078D7 - dark: 007ACC -->

    <Color x:Key="PrimaryTextColor">#2E2E2E</Color> <!-- light: #2E2E2E - dark: #FFF -->
	<Color x:Key="SecondaryTextColor">#555</Color> <!-- light: #555 - dark: #AAA -->

    <Color x:Key="AccentHoverColor">#0078D7</Color> <!-- light: #0078D7 - dark: #1F9EEF -->
    <Color x:Key="PrimaryHoverColor">#E0E0E0</Color> <!-- light: #E0E0E0 - dark: #555 -->

</ResourceDictionary>